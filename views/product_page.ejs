<style>
    /* CSS Document */


.card{text-align: center; border: none; border-radius: 5px;-webkit-box-shadow: 12px 14px 22px 2px rgba(0,0,0,0.75);
-moz-box-shadow: 12px 14px 22px 2px rgba(0,0,0,0.75);
box-shadow: 12px 14px 22px 2px rgba(0,0,0,0.75);
margin-bottom: 70px;
font-family: Raleway,sans-serif;
 
  padding: 0 0 72px;
  overflow: hidden;
  position: relative;
  z-index: 1;
  margin-bottom: 40px;
  height: 400px;


}

.li-added {
  list-style: square url("38specialPlusP.gif");
  font-weight: bold;
  color: green;
  font-size: large;
}

#active, #notactive {
  position: relative;
  -webkit-transition: all .3s ease 0s;
  transition: all .3s ease 0s;
  overflow: hidden;
  height: 600px;
  object-fit: cover;

}

 img {
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
  object-fit: cover;
 }

.card img {
  
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  object-fit: cover;
}


#size h5 {display: inline-block;}

.itemcontainer {
  
  padding: 30px; 
  float: left;
  overflow:auto;
  width: 50%;
  background:rgb(245, 247, 245);



}

@media only screen and (max-width: 768px) {
  .itemcontainer {

  width: auto;
  background: none;


}
}

</style>
