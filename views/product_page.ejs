<script>
      var desc = $('#desc').val();
      var temp = new Array();
      temp = desc.split(",");
      var container = document.getElementById("container");
      temp.forEach(function (text) {
       var div = document.createElement("li");
        div.innerText = text;
        div.classList.add("li-added");
        container.append(div);
});
</script>
